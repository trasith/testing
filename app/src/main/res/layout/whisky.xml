        android:textSize="30dp"
        android:layout_below="@+id/dateConsumed"
        android:layout_alignLeft="@+id/dateConsumed"
        android:layout_alignStart="@+id/dateConsumed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whiskyColor"
        android:id="@+id/whiskyColor"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/editText8"
        android:layout_alignLeft="@+id/whiskyViscosity"
        android:layout_alignStart="@+id/whiskyViscosity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/whiskyName"
        android:layout_toRightOf="@+id/distilleryName"
