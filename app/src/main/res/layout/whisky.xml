<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whiskyName"
        android:id="@+id/whiskyName"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distilleryName"
        android:id="@+id/distilleryName"
        android:textSize="30dp"
        android:layout_above="@+id/editText3"
        android:layout_alignLeft="@+id/whiskyName"
        android:layout_alignStart="@+id/whiskyName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whiskyAge"
        android:id="@+id/whiskyAge"
        android:textSize="30dp"
        android:layout_above="@+id/editText4"
        android:layout_alignLeft="@+id/distilleryName"
        android:layout_alignStart="@+id/distilleryName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
