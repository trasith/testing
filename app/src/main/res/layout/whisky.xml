        android:textSize="30dp"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignLeft="@+id/whiskyAge"
        android:layout_alignStart="@+id/whiskyAge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/whiskyRegion"
        android:id="@+id/whiskyRegion"
        android:textSize="30dp"
        android:layout_alignTop="@+id/editText5"
        android:layout_alignLeft="@+id/whiskyProof"
        android:layout_alignStart="@+id/whiskyProof" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
